{
  "name": "ideaflux",
  "version": "2.0.0",
  "description": "منصة التفكير البصري الأولى المصممة للمستخدم العربي - مجانية بالكامل مع واجهة عمل متقدمة وذكاء اصطناعي",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/",
    "build": "echo 'Building IdeaFlux v2.0.0 for production...' && npm run optimize",
    "optimize": "echo 'Optimizing assets and performance...'",
    "test": "echo 'Running tests...'",
    "deploy": "netlify deploy --prod --dir=.",
    "canvas": "live-server --port=3001 --open=/canvas.html",
    "preview": "netlify dev",
    "lighthouse": "lighthouse https://ideaflux.netlify.app --output=html --output-path=./reports/lighthouse.html",
    "validate": "html-validate *.html",
    "compress": "gzip -9 -c dist/*.js > dist/*.js.gz && gzip -9 -c dist/*.css > dist/*.css.gz"
  },
  "keywords": [
    "visual-thinking",
    "mind-mapping",
    "brainstorming",
    "canvas",
    "arabic",
    "free",
    "collaboration",
    "research",
    "notes",
    "ai-powered",
    "google-ai",
    "pwa",
    "netlify",
    "2025",
    "modern-web",
    "rtl",
    "arabic-ui",
    "infinite-canvas",
    "drag-drop",
    "real-time"
  ],
  "author": {
    "name": "IdeaFlux Team",
    "email": "team@ideaflux.com",
    "url": "https://ideaflux.netlify.app"
  },
  "contributors": [
    {
      "name": "AI Developer",
      "role": "Lead Developer"
    }
  ],
  "license": "MIT",
  "homepage": "https://ideaflux.netlify.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohamed-khairy-5i/glowing-eureka.git"
  },
  "bugs": {
    "url": "https://github.com/mohamed-khairy-5i/glowing-eureka/issues",
    "email": "support@ideaflux.com"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/ideaflux"
  },
  "devDependencies": {
    "@netlify/plugin-sitemap": "^0.8.1",
    "html-validate": "^8.7.4", 
    "lighthouse": "^11.4.0",
    "live-server": "^1.2.2",
    "netlify-plugin-minify-html": "^0.3.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "Chrome >= 90",
    "Firefox >= 88",
    "Safari >= 14",
    "Edge >= 90"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "pwa": {
    "name": "IdeaFlux",
    "short_name": "IdeaFlux",
    "theme_color": "#4f46e5",
    "background_color": "#ffffff",
    "display": "standalone",
    "scope": "/",
    "start_url": "/"
  },
  "netlify": {
    "redirects": [
      {
        "from": "/canvas",
        "to": "/canvas.html",
        "status": 200
      },
      {
        "from": "/workspace",
        "to": "/canvas.html",
        "status": 200
      }
    ]
  },
  "performance": {
    "budgets": [
      {
        "path": "/*.html",
        "timings": [
          {
            "metric": "fcp",
            "budget": 2000
          },
          {
            "metric": "lcp",
            "budget": 2500
          }
        ]
      }
    ]
  }
}
